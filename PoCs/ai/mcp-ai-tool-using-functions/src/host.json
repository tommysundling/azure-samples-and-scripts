{
  "version": "2.0",
  "logging": {
    "applicationInsights": {
      "samplingSettings": {
        "isEnabled": true,
        "maxTelemetryItemsPerSecond": 20,
        "excludedTypes": "Request"
      }
    }
  },
  "extensions": {
    "mcp": {
      "instructions": "This is a simple Hello AI tool that responds with a greeting message. Use it to test MCP server connectivity.",
      "serverName": "HelloAI-MCP-Server",
      "serverVersion": "1.0.0",
      "encryptClientState": true,
      "messageOptions": {
        "useAbsoluteUriForEndpoint": false
      }
    }
  }
}
